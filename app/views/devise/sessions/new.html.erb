
<%= render "shared/nav"%>
<div class='form-header'>
  <h1 class='form-header-text'>
    ログイン
  </h1>
</div>
<%= form_with model: @user, url: new_user_session_path, class: 'registration-main', local: true do |f| %>
  <div>

    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-group">
      <div>
        <label class="form-text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"必須", autofocus: true %>
    </div>
    <div class="form-group">
      <div>
        <label class="form-text">パスワード<br>(6文字以上)</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"必須" %>
    </div>
    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-red-btn" %>
    </div>
  </div>
<% end %>

<%= render "shared/footer"%>