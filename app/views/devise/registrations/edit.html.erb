<%= render "shared/nav"%>
<h2>アカウントを編集できます</h2>

<div class="registration-main">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render partial: 'shared/error_messages', locals: {model: f.object} %>

    <div class="form-group">
      <div>
        <label class="form-text">ニックネーム (2文字以上)</label>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"", maxlength:"20" %>
    </div>

    <div class="form-group">
      <div>
        <label class="form-text">会社名</label>
        <p class="reference">※製品を出品する場合は所属会社名を入力してください</p>
      </div>
      <%= f.text_area :company_name, class:"input-default", id:"company_name", placeholder:"任意", maxlength:"20" %>
    </div>
  

    <div class="form-group">
      <div>
        <label class="form-text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"", autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <div>
        <label class="form-text">パスワード (6文字以上)</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"新しいパスワード" %>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password", placeholder:"新しいパスワード(確認用)" %>
      <%= f.password_field :current_password, class:"input-default", id:"password", placeholder:"現在のパスワード" %>

    </div>

    
    <div class='register-btn'>
      <%= f.submit "更新" ,class:"register-red-btn" %>
    </div>
  <% end %>

</div>
<div class="user-delete">
  <h2>アカウントを削除したい方</h2>
  <div class="delete-btn">
    <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当にアカウントを削除して良いですか？" }, method: :delete, class: "delete-red-btn" %>
  </div>
</div>

<%= render "shared/footer"%>
